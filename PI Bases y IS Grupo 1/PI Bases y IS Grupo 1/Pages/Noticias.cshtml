@page
@model PIBasesISGrupo1.Pages.NoticiaModel
@{
    ViewData["Title"] = "Noticia";
}

<br>
<div class="popular_courses">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="main_title">
                    <h2 class="mb-3">Noticias destacadas</h2>
                    <p>
                        Lo que acontece en la comunidad
                    </p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">

                @foreach (var noticia in (List<PIBasesISGrupo1.Models.Noticia>)ViewData["Noticias"])
                {

                    <div class="single_course ">
                        <br>
                        <div class="course_head" style="width:600px; height:350px; display:block; margin:auto; margin-top:20px">

                            <img class="img-fluid" src="data: @noticia.tipoArchivoImagen;base64,@(Convert.ToBase64String(@noticia.arrayArchivoImagen))" asp-append-version="true" />
                        </div>

                        <div class="course_content" style="text-align:center">
                            <h4 class="mb-3">

                                <a>@noticia.titulo</a>
                            </h4>

                            <p>
                                @noticia.fecha
                            </p>
                            <details>
                                <summary class="tag mb-4 d-inline-block">Ver noticia</summary>
                                <p id="contenido">
                                    @noticia.contenidoNoticia
                                </p>
                            </details>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>
</div>