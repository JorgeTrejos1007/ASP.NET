@page
@model PIBasesISGrupo1.Pages.Encuestas.CrearPreguntaModel
@{
    ViewData["Title"] = "CrearPregunta";
}

<h2>Crear Pregunta</h2>
<form method="post">
    <input asp-for="@Model.pregunta.pregunta" placeholder="Pregunta" /></br></br>
    <input type="hidden" asp-for="@Model.pregunta.encuestaID"  value="@ViewData["idEncuesta"]" />
    <input asp-for="@Model.pregunta.opcion1" placeholder="Opción 1" /></br></br>
    <input asp-for="@Model.pregunta.opcion2" placeholder="Opción 2" /></br></br>
    <input asp-for="@Model.pregunta.opcion3" placeholder="Opción 3" /></br></br>
    <input asp-for="@Model.pregunta.opcion4" placeholder="Opción 4" /></br></br>

    <input type="submit" value="Crear" asp-page-handler="Pregunta" />
</form>
