@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";

}

<!--================ Start Home Banner Area =================-->
<section class="home_banner_area">
    <div class="banner_inner">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="banner_content text-center">
                        <p class="text-uppercase">
                            Compartir conocimiento es lo más importante
                        </p>
                        <h2 class="text-uppercase mt-4 mb-5">
                            Comunidad práctica de aprendizaje
                        </h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================ End Home Banner Area =================-->
<!--================ Start Feature Area =================-->
<br>
<br>
<section class="feature_area">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="main_title">
                    <h2 class="mb-3">Nunca dejes de aprender</h2>
                    <p>
                        Somos una comunidad basada en compartir conocimiento
                    </p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-6">
                <div class="single_feature">
                    <div class="icon"><span class="flaticon-student"></span></div>
                    <div class="desc">
                        <h4 class="mt-3 mb-2">Misión</h4>
                        <p>
                            Compartir ideas, encontrar soluciones e innovar, uniendo sus esfuerzos para el desarrollo continuo
                            de un área de conocimiento especializado
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="single_feature">
                    <div class="icon"><span class="flaticon-book"></span></div>
                    <div class="desc">
                        <h4 class="mt-3 mb-2">Visión</h4>
                        <p>
                            Ser un espacio de formación continua, establecimiento de alianzas entre países miembros y generación de nuevo conocimiento.
                        </p>
                    </div>
                </div>
            </div>
            <!---->
            <div class="col-lg-4 col-md-6">
                <div class="single_feature">
                    <div class="icon"><span class="flaticon-earth"></span></div>
                    <div class="desc">
                        <h4 class="mt-3 mb-2">Países miembros</h4>
                        <p>
                            Entre nuestros Paises Miembros actualmente estan<br />
                            @foreach (var miembro in (List<string>)ViewData["PaisesMiembro"])
                            {
                                <li>@miembro</li>
                            }

                        </p>
                    </div>

                    <div class="desc">
                        <h4 class="mt-3 mb-2">¡Ya somos @Html.Label("", ViewData["TotalMiembros"].ToString()) miembros!</h4>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================ End Feature Area =================-->
<!--================ Start NOTICIAS =================-->
<div class="popular_courses">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="main_title">
                    <h2 class="mb-3">Noticias destacadas</h2>
                    <p>
                        Lo que acontece en la comunidad
                    </p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">

                <div class="owl-carousel active_course">

                    @foreach (var noticia in (List<PIBasesISGrupo1.Models.Noticia>)ViewData["Noticias"])
                    {

                        <div class="single_course ">

                            <div class="course_head">

                                <img class="img-fluid" src="data: @noticia.tipoArchivoImagen;base64,@(Convert.ToBase64String(@noticia.arrayArchivoImagen))" asp-append-version="true" />
                            </div>

                            <div class="course_content">
                                <h4 class="mb-3">

                                    <a>@noticia.titulo</a>
                                </h4>

                                <p>
                                    @noticia.fecha
                                </p>
                                <details>
                                    <summary class="tag mb-4 d-inline-block">Ver noticia</summary>
                                    <p id="contenido">
                                        @noticia.contenidoNoticia
                                    </p>
                                </details>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>

    </div>
</div>
<!--================ End Popular Courses Area =================-->