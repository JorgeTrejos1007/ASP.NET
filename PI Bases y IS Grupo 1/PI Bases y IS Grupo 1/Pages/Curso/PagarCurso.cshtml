@page
@model PIBasesISGrupo1.Pages.Curso.PagarCursoModel
@{
    ViewData["Title"] = "PagarCurso";
}

<h2>Pagar Curso</h2>

<form class="form_area"
      id="myForm"
      method="post"
      enctype="multipart/form-data">
    <strong>Subir comprobante:</strong> <input asp-for="@Model.comprobante" type="file" class="btn btn alert-info" />
    <div class="col-lg-12 text-center">
        <button class="primary-btn"  asp-route-estudiante="@ViewData["estudiante"]" asp-route-nombreCurso="@ViewData["nombreCurso"]" asp-route-esMiembro="@ViewData["esMiembro"]" asp-page-handler="AñadirEstudiante">Confirmar</button>
    </div>
</form>