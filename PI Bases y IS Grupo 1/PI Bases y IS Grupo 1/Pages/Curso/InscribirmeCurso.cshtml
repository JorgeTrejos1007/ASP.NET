@page
@model PIBasesISGrupo1.Pages.Curso.InscribirmeCursoModel
@{
    ViewData["Title"] = "InscribirmeCurso";
    var mensaje = (string)TempData["mensaje"];
    var esMiembro = (bool)ViewData["esMiembro"];
    var curso = (string)ViewData["nombreCurso"];
    var miembroDeLaComunidad = (PIBasesISGrupo1.Models.Miembro)ViewData["miembroDeLaComunidad"];
}

 
    <div class="comment-form">
         <div class="col-lg-4 offset-lg-1">
              <div class="register_form">
                <h3>Incribirme  a un Curso</h3>
                    @if (esMiembro)
                    {
                        <div class="row">
                            <div class="col-lg-12 form_group">
                                <div class="row">

                                    <input asp-for="@curso" value="@curso" /><br /><br />
                                    <input asp-for="@miembroDeLaComunidad.nombre" value="@miembroDeLaComunidad.nombre" readonly /><br /><br />
                                    <input asp-for="@miembroDeLaComunidad.primerApellido" value="@miembroDeLaComunidad.primerApellido" readonly /><br /><br />
                                    <input asp-for="@miembroDeLaComunidad.segundoApellido" value="@miembroDeLaComunidad.segundoApellido" readonly /><br /><br />
                                    <input asp-for="@miembroDeLaComunidad.genero" value="@miembroDeLaComunidad.genero" readonly />
                                    <input asp-for="@miembroDeLaComunidad.email" value="@miembroDeLaComunidad.email" readonly />
                                    <input type="hidden" asp-for="@Model.curso" value="@curso" />
                                </div>
                                <div class="card-columns">
                                    <input type="radio" asp-for="@Model.participanteExterno.genero" value="Femenino" readonly />Femenino<br />
                                    <input type="radio" asp-for="@Model.participanteExterno.genero" value="Masculino" readonly />Masculino<br />
                                    <input type="radio" asp-for="@Model.participanteExterno.genero" value="Otro" readonly />Otro<br />
                                </div>
                                <div class="col-lg-12 text-center">
                                    <a asp-page="./PagarCurso" asp-route-estudiante="@miembroDeLaComunidad" asp-route-nombreCurso="@curso" asp-route-esMiembro="@esMiembro" class="primary-btn"> Confirmar </a>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                         
                        <div class="col-lg-12 form_group">

                            <div class="row">
                                <input asp-for="@curso" value="@curso" /><br /><br />

                                <input asp-for="@Model.participanteExterno.nombre"
                                       placeholder="tu nombre"
                                       required=""
                                       type="text" />


                                <input asp-for="@Model.participanteExterno.primerApellido"
                                       placeholder="Tu primer apellido"
                                       required=""
                                       type="text" />
                                <input asp-for="@Model.participanteExterno.segundoApellido"
                                       placeholder="Tu segundo apellido"
                                       type="text" />
                             

                                <input asp-for="@Model.participanteExterno.email"
                                       placeholder="Tu email"
                                       type="email"
                                       required="" />
                                <input  type="hidden" asp-for="@Model.curso" value="@curso" />

                             </div>
                            <div class="card-columns">
                                <input type="radio" asp-for="@Model.participanteExterno.genero" value="Femenino" />Femenino<br />
                                <input type="radio" asp-for="@Model.participanteExterno.genero" value="Masculino" />Masculino<br />
                                <input type="radio" asp-for="@Model.participanteExterno.genero" value="Otro" />Otro<br />
                            </div>
                            </div>
                            <div class="col-lg-12 text-center">
                                <a asp-page="./PagarCurso" asp-route-estudiante="@Model.participanteExterno" asp-route-nombreCurso="@curso" asp-route-esMiembro="@esMiembro" class="primary-btn"> Confirmar </a>
                            </div>
                         
                    }
              </div>
            </div>
 
    </div>